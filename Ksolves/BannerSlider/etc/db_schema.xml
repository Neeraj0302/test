<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   	<table name="banner_slider" resource="default" engine="innodb" comment="Dolphin Contact Table">
		<column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID" />
        <column xsi:type="varchar" name="name" nullable="false" length="25" comment="Name" />
		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Creation Time"/>
    	<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Update Time"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
   	</table>

    <!-- For Banner Slider Image  -->
     
     <table name="banner_slider_image" resource="default" engine="innodb" comment="Ksolves Customer Table">
		<column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID" />
        <column xsi:type="smallint" name="banner_id" padding="6" unsigned="false" nullable="false" comment="BANNER_ID" />
		<column xsi:type="varchar" name="name" nullable="false" length="25" comment="Name" />

		<column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Creation Time"/>
    	<column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
            comment="Update Time"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
         <constraint xsi:type="foreign"
                    referenceId="BANNER_SLIDER_IMAGE_BANNER_ID_BANNER_SLIDER_ID"
                    table="banner_slider_image"
                    column="banner_id"
                    referenceTable="banner_slider"
                    referenceColumn="id" 
                    onDelete="CASCADE" />

                 
   	</table>


